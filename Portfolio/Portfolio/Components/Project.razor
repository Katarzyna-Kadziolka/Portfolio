@using Portfolio.Data
<div class="container mt-3">
    <div class="row">
        <div class="col text-center">
            <h2>@ProjectName</h2>
            <span id="project-date">
                <i>@Date</i>
            </span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col text-center">
            <img src=@PhotoAddress alt=@PhotoDescription class="img img-fluid" width=@PhotoWidth>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 col-md-6 mb-2">
            <h4>Description</h4>
            <span>
                @ChildContent
            </span>
        </div>
        <div class="col-12 col-md-6">
            <h4>Technologies</h4>
            @foreach (var tech in Techs) {
                <Technology Type="tech"/>
            }
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col text-lg-end">
            <a href=@GithubAddress target="_blank">
                <button type="button" class="btn btn-dark pt-2">
                    <object data="Images/github.svg" type="image/svg+xml" class="github-image me-1"></object>
                    Github
                </button>
            </a>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string ProjectName { get; set; }

    [Parameter]
    public string Date { get; set; }

    [Parameter]
    public string PhotoAddress { get; set; }

    [Parameter]
    public string PhotoDescription { get; set; }

    [Parameter]
    public Tech[] Techs { get; set; }

    [Parameter]
    public string GithubAddress { get; set; }
    
    [Parameter]
    public string PhotoWidth { get; set; }
}